@import url("http://fonts.googleapis.com/css?family=Arimo:400,700");
/*---------------------------------
	COLORS
-----------------------------------*/
@text: #444;
@link: #336699;

@base-dark: #336699;
@base-medium: #6699cc;
@base-light: #eaeaea;

/*---------------------------------
	FONT FAMILIES
-----------------------------------*/
@font1: "Trebuchet Ms", arial, verdana, sans-serif;
@font2:  'Arimo', "Trebuchet MS", arial, verdana, sans-serif;

@radius: 2px;
.border-all (@radius) {
  border-radius: @radius;
  -moz-border-radius: @radius;
  -webkit-border-radius: @radius;
}

.border-top (@radius) {
  border-radius: @radius @radius 0 0;
  -moz-border-radius: @radius @radius 0 0;
  -webkit-border-radius: @radius @radius 0 0;
}

.border-bot (@radius) {
  border-radius: 0 0 @radius @radius;
  -moz-border-radius: 0 0 @radius @radius;
  -webkit-border-radius: 0 0 @radius @radius;
}

.border-tl (@radius) {
  border-radius: @radius 0 0 0;
  -moz-border-radius: @radius 0 0 0;
  -webkit-border-radius: @radius 0 0 0;
}

.border-tr (@radius) {
  border-radius: 0 @radius 0 0;
  -moz-border-radius: 0 @radius 0 0;
  -webkit-border-radius: 0 @radius 0 0;
}

.box-shadow {
    box-shadow: 0 1px 5px rgba(0,0,0,0.15);
    -webkit-box-shadow: 0 2px 5px rgba(0,0,0,0.15);
    -moz-box-shadow: 0 2px 5px rgba(0,0,0,0.25);
}

.panel {
    padding: 20px 20px;
    /*background: #efefef;*/
    /*background: -moz-linear-gradient(top, #FFFFFF 0%, #F4F4F4 100%);*/
    /*background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFFFFF), color-stop(100%,#F4F4F4));*/
//   background: @base-light url(/assets/common/images/bg-striped-3.png);
    box-shadow: 0 2px 5px rgba(0,0,0,0.15);
    -webkit-box-shadow: 0 2px 5px rgba(0,0,0,0.15);
    -moz-box-shadow: 0 2px 5px rgba(0,0,0,0.25);
    margin: 0 0 20px 0;
}

/*---------------------------------
	HTML ELEMENTS
-----------------------------------*/
a{color:#4D99E0;outline:0;}
a:active{color:inherit;}
a:visited{}
a:hover{}
a img{border:0;}
strong,b{color:#000;background:lightyellow;position:relative;top:0;left:0;padding:2px 5px;}
strike{}
em,i{}
.hide{display:none;}
.show{display:block;}


/*---------------------------------
	UTILITY
-----------------------------------*/
.center{text-align:center;}
.left{text-align:left;}
.right{text-align:right;}
.pipe {
    display: inline-block;
    padding: 0 4px;
    color: @text;
}

/*---------------------------------
	HR
-----------------------------------*/
hr{clear:both;border-bottom:0;border-top:1px dotted #ccc;border-right:0;border-left:0;margin:11px 0;min-height: 0px;height:1px;}
hr.alt1{border-style: solid;}
hr.alt2{border-style: dashed;}

/*---------------------------------
	HTML5 ELEMENTS (shim)
-----------------------------------*/
article,aside,details,figcaption,figure,
footer,header,hgroup,menu,nav,section {
display:block;
}

/*---------------------------------
	HEADINGS
-----------------------------------*/
h1,h2,h3,h4,h5,h6{
color: lighten(@text, 25%);
font-family: @font1;
font-weight:bold;
line-height:140%;
}

h1{
font-size:2.5em;
margin:10px 0 10px 0;
}

h1.sep {
    padding: 0 10px;
}

h2{
font-size:2.0em;
margin:10px 0 10px 0;
}

h3{
font-size:1.5em;
margin:10px 0 10px 0;
line-height:130%;
}

h4{
font-size:1.25em;
margin:10px 0 10px 0;
}

h5{
font-size:1.1em;
margin:10px 0 10px 0;
}

h6{
font-size:1em;
margin:10px 0 5px 0;
}

/*---------------------------------
	PARAGRAPHS
-----------------------------------*/
p{
line-height:150%;
color:#666;
margin:10px 0;
}

/*---------------------------------
	BODY
-----------------------------------*/
body {
background:#fff;
color: @text;
font:normal 0.9em/150% @font2;
margin:0;
padding:0;
text-shadow: 0px 0px 1px transparent; /* google font pixelation fix */
}

/*---------------------------------
	USER-BAR
-----------------------------------*/


#page-top .container_12 {
    position: relative;
    height: 144px;
}

#page-top #primary-branding {
    /*background: #ccc;*/
    height: inherit;
    position: relative;
}

#page-top .site-logo {
    position: absolute;
    top: 20px;
    left: 0px;
}

#page-top .site-name {
    font-size: 150%;
    position: absolute;
    top: 40px;
    left: 120px;
}

#page-top .site-name a {
    text-decoration: none;
    color: @text;
}

#page-top .site-slogan {
    font-size: 100%;
    position: absolute;
    top: 70px;
    left: 120px;
}

#page-top .secondary-branding {
    display: none;
}

/*---------------------------------
	USER-NAVI
-----------------------------------*/

.user-nav
{
    margin-top: 33px;
    position: relative;
    text-align: right;
    /*top: 121px;*/
    z-index: 1000;
}

.user-nav .buttons {
    position: absolute;
    right: 0px;
    z-index: 1000;
}

.user-nav .actions {
    margin-top: 10px;
    text-align: right;
}

.user-name {
    color: @text;
    display: inline-block;
    float: none;
    font-weight: bold;
}

.user-name img {
    margin-right: 8px;
}

.user-panel {
    padding: 8px 14px;
    background: @base-light url(/assets/common/images/bg-striped-3.png);
    float: right;
    margin: 0 -10px 0 0;
    .box-shadow();
    width: 100%;
}



