<?xml version ="1.0" encoding="UTF-8"?>

<views>
    <view name="html">
        <row>
            <column proportion="2of3">
                <container id="object-media">

                    <container type="placeholder" id="object-title-big"></container>

                    <container ifNot="/icn:record/delving:deepZoomUrl" id="image-viewer">

                        <!-- FIRST CHECK FOR DELVING:IMAGEURL -->
                        <container if="/icn:record/delving:imageUrl">
                            <image path="/icn:record/delving:imageUrl"/>
                        </container>

                        <!-- IF THERE IS NO DELVING:IMAGEURL -->
                        <container ifNot="/icn:record/delving:imageUrl">
                            <!-- THEN CHECK FOR EUROPEANA:ISSHOWNBY -->
                            <container if="/icn:record/europeana:isShownBy">
                                <image path="/icn:record/europeana:isShownBy"/>
                            </container>

                            <container ifNot="/icn:record/europeana:isShownBy">
                                <!-- THEN CHECK FOR DELVING:THUMBNAIL -->
                                <container if="/icn:record/delving:thumbnail">
                                    <image path="/icn:record/delving:thumbnail"/>
                                </container>
                                <!-- THEN CHECK FOR EUROPEANA:OBJECT -->
                                <container ifNot="/icn:record/delving:thumbnail">
                                    <image path="/icn:record/europeana:object"/>
                                </container>
                            </container>
                        </container>

                    </container>

                    <container id="zoom-viewer" if="/icn:record/delving:deepZoomUrl">
                        <link textValue="zoom" urlExpr="/icn:record/delving:deepZoomUrl" type="zoom"/>
                    </container>

                    <container id="context-link" if="/icn:record/europeana:isShownAt">
                        <link textValue="search.ViewInOriginalContext" urlExpr="/icn:record/europeana:isShownAt" type="external"/>
                    </container>

                    <container if="/icn:record/europeana:rights" id="rightsUrl" class="unstyled" type="list">
                        <link urlExpr="/icn:record/europeana:rights" urlValue="" textExpr="/icn:record/europeana:rights"/>
                    </container>

                    <container id="deepZoomUrls" if="/icn:record/delving:deepZoomUrl">
                        <list path="/icn:record/delving:deepZoomUrl">
                            <link urlExpr="." textValue="zoom-url"/>
                        </list>
                    </container>

                    <container  if="/icn:record/delving:imageUrl" id="imageUrls">
                        <list path="/icn:record/delving:imageUrl">
                            <link urlExpr="." textValue="image-url"/>
                        </list>
                    </container>



                </container>
                <row>
                    <column proportion="1of3">
                        <container type="definition-list">
                            <field path="/icn:record/dc:title" label="md.dc.title"/>
                            <field path="/icn:record/dc:description" label="md.dc.description" />
                            <enumeration label="md.dc.creator" separator="lf" path="/icn:record/dc:creator"/>
                            <field path="/icn:record/icn:creatorYearOfBirth" label="md.icn.creatorYearOfBirth"/>
                            <field path="/icn:record/icn:creatorYearOfDeath" label="md.icn.creatorYearOfDeath"/>
                            <enumeration label="md.dc.date" separator=", " path="/icn:record/dc:date,/icn:record/dcterms:created,/icn:record/dcterms:temportal,/icn:record/dcterms:issued"/>
                            <enumeration label="md.dc.type" separator=", " path="/icn:record/dc:type, /icn:record/icn:material"/>
                            <enumeration label="md.dc.format" separator="lf" path="/icn:record/dc:format,/icn:record/dcterms:extent"/>
                            <enumeration label="md.icn.material" separator=", " path="/icn:record/icn:material" />
                            <enumeration label="md.icn.technique" separator=", " path="/icn:record/icn:technique"/>
                            <enumeration label="md.dc.subject" separator=", " path="/icn:record/dc:subject/icn:record/dcterms:temporal,/icn:record/dcterms:spatial,/icn:record/dc:coverage"/>
                            <!--<field path="/icn:record/dc:coverage" label="md.dc.coverage"/>-->
                            <enumeration label="md.dc.relation"
                                         separator=", " path="/icn:record/dc:relation,/icn:record/dcterms:references,/icn:record/dcterms:isReferencedBy,/icn:record/dcterms:isReplacedBy,
                                 /icn:record/dcterms:isRequiredBy,/icn:record/dcterms:isPartOf,/icn:record/dcterms:hasPart,/icn:record/dcterms:replaces,/icn:record/dcterms:requires,
                                 /icn:record/dcterms:isVersionOf,/icn:record/dcterms:hasVersion,/icn:record/dcterms:conformsTo,/icn:record/dcterms:hasFormat"/>
                            <field path="/icn:record/dcterms:provenance" label="md.dcterms.provenance"/>
                        </container>
                        <!-- MUSEOMETRIE FIELDS -->
                        <container id="admin" role="museometrie" type="definition-list">
                            <field path="/icn:record/icn:currentLocation" label="md.icn.currentLocation" role="museometrie"/>
                            <field path="/icn:record/icn:previousLocation" label="md.icn.previousLocation" role="museometrie"/>
                            <field path="/icn:record/icn:acquisitionMeans" label="md.icn.acquisitionMeans" role="museometrie"/>
                            <field path="/icn:record/icn:acquisitionYear" label="md.icn.acquisitionYear" role="museometrie"/>
                            <field path="/icn:record/icn:acquiredWithHelpFrom" label="md.icn.acquiredWithHelpFrom" role="museometrie"/>
                            <field path="/icn:record/icn:purchasePrice" label="md.icn.purchasePrice" role="museometrie"/>
                            <field path="/icn:record/icn:physicalState" label="md.icn.physicalState" role="museometrie"/>
                        </container>

                    </column>
                    <column proportion="1of3">
                        <container type="definition-list">
                            <!--<field path="/icn:record/europeana:collectionName" label="md.europeana.collectionName"/>-->
                            <field path="/icn:record/europeana:collectionTitle" label="md.icn.collection"/>
                            <field path="/icn:record/icn:collectionPart" label="md.icn.collectionPart" />
                            <field path="/icn:record/icn:collectionType" label="md.icn.collectionType" />

                            <!--<link textValue="${provider}" urlValue="${resolvedProviderUri}" label="md.europeana.provider"/>-->
                            <link textValue="${dataProvider}" urlValue="${resolvedDataProviderUri}" label="md.europeana.dataProvider"/>

                            <!--<field path="/icn:record/dc:source" label="md.dc.source"/>-->
                            <field path="/icn:record/dc:contributor" label="searchfield.contributor"/>
                            <field path="/icn:record/dc:source" label="md.dc.source"/>
                            <field path="/icn:record/icn:province" label="md.icn.province"/>
                            <field path="/icn:record/europeana:country" label="md.europeana.country"/>
                            <field path="/icn:record/dc:rights" label="md.dc.rights"/>

                            <field path="/icn:record/dc:identifier" label="md.dc.identifier"/>
                        </container>

                        <!-- RIJKS FIELDS -->
                        <container role="rijksMember" type="definition-list-horizontal">
                            <field path="/icn:record/icn:legalStatus" label="md.icn.legalStatus" role="rijksMember"/>
                            <field path="/icn:record/icn:acceptedStateCharges" label="md.icn.acceptedStateCharges" role="rijksMember"/>
                            <field path="/icn:record/icn:acceptedStateChargesReason" label="md.icn.acceptedStateChargesReason" role="rijksMember"/>
                            <field path="/icn:record/icn:expulsionYear" label="md.icn.expulsionYear" role="rijksMember"/>
                            <field path="/icn:record/icn:expulsionMeans" label="md.icn.expulsionMeans" role="rijksMember"/>
                        </container>
                    </column>
                </row>
            </column>
            <column proportion="1of3">
                <container type="placeholder" id="related-items"></container>
            </column>
        </row>
        <row>

        </row>
    </view>

    <view name="api">
        <elem name="result">
            <attrs>
                <attr prefix="xmlns" name="delving" value="http://www.delving.eu/schemas/"/>
                <attr prefix="xmlns" name="custom" value="http://www.delving.eu/schemas/"/>
                <attr prefix="xmlns" name="dc" value="http://purl.org/dc/elements/1.1/"/>
                <attr prefix="xmlns" name="dcterms" value="http://purl.org/dc/termes/"/>
                <attr prefix="xmlns" name="europeana" value="http://www.europeana.eu/schemas/ese/"/>
                <attr prefix="xmlns" name="icn" value="http://www.icn.nl/"/>
            </attrs>
            <elem name="layout">
                <list name="fields" path="/icn:record/*[not(contains('relatedItems currentLocation previousLocation acquisitionMeans acquiredWithHelpFrom purchasePrice legalStatus stateAcceptsCharges expulsionFromStateYear meansOfExpulsion physicalState', local-name()))]" distinct="name">
                    <auto-layout-field/>
                </list>
            </elem>
            <elem name="item">
                <list name="fields" path="/icn:record/*[not(contains('relatedItems currentLocation previousLocation acquisitionMeans acquiredWithHelpFrom purchasePrice legalStatus stateAcceptsCharges expulsionFromStateYear meansOfExpulsion physicalState', local-name()))]">
                    <auto-field/>
                </list>
            </elem>
            <list name="relatedItems" path="//*[local-name()='record']/*[contains('relatedItems', local-name())]/*">
                <elem name="item">
                    <list name="fields" path="fields/*[not(contains('relatedItems currentLocation previousLocation acquisitionMeans acquiredWithHelpFrom purchasePrice legalStatus stateAcceptsCharges expulsionFromStateYear meansOfExpulsion physicalState', local-name()))]">
                        <auto-field/>
                    </list>
                </elem>
            </list>
        </elem>
    </view>
</views>