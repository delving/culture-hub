<?xml version ="1.0" encoding="UTF-8"?>

<views>
    <view name="full">
        <row>
            <column proportion="1of3">
                <container>
                    <field path="/icn:record/dc:title" label="metadata.dc.title"/>
                    <field path="/icn:record/dc:creator" label="metadata.dc.creator"/>
                    <field path="/icn:record/icn:creatorYearOfBirth" label="metadata.icn.creatorYearOfBirth"/>
                    <field path="/icn:record/dc:date" label="metadata.dc.date"/>
                    <field path="/icn:record/dc:format" label="metadata.dc.format"/>
                    <field path="/icn:record/dc:rights" label="metadata.dc.rights"/>
                    <field path="/icn:record/dc:coverage" label="metadata.dc.coverage"/>
                    <field path="/icn:record/dc:source" label="metadata.dc.source"/>
                    <field path="/icn:record/dc:type" label="metadata.dc.type"/>
                    <!-- seems to be the same as icn:technique -->
                    <!--<enumeration path="/icn:record/dcterms:medium" label="metadata.dcterms.medium"/>-->
                    <field path="/icn:record/icn:material" label="metadata.icn.material"/>
                    <enumeration path="/icn:record/icn:technique" label="metadata.icn.technique" separator=", "/>

                    <field path="/icn:record/dcterms:provenance" label="metadata.dcterms.provenance"/>
                </container>
            </column>
            <column proportion="1of3">
                <field path="/icn:record/europeana:collectionName" label="metadata.europeana.collectionName"/>
                <field path="/icn:record/europeana:collectionTitle" label="metadata.europeana.collectionTitle"/>
                <field path="/icn:record/icn:collectionPart" label="metadata.icn.collectionPart" />

                <!-- TODO extend these to links, when we have the mechanism in place. -->
                <field value="${provider}" label="metadata.europeana.provider"/>
                <field value="${dataProvider}" label="metadata.europeana.dataProvider"/>

                <field path="/icn:record/icn:province" label="metadata.icn.province"/>
                <field path="/icn:record/europeana:country" label="metadata.europeana.country"/>

                <field path="/icn:record/icn:acquisitionMeans" label="metadata.icn.acquisitionMeans" role="icn"/>
                <field path="/icn:record/icn:purchasePrice" label="metadata.icn.purchasePrice" role="icn"/>
            </column>
            <column proportion="1of3">
                <container>
                    <image path="/icn:record/europeana:object"/>

                    <!-- TODO: textValue should get value from messages just like Label-->
                    <link textValue="search.viewInOriginalContext" urlExpr="/icn:record/europeana:isShownAt"/>
                </container>
            </column>
        </row>
    </view>

<!--

<dc:identifier>OKS 1989-001</dc:identifier>

<europeana:rights>http://www.europeana.eu/rights/unknown/</europeana:rights>
<europeana:type>IMAGE</europeana:type>

-->

    <view name="api">
        <elem name="result">
            <attrs>
                <attr prefix="xmlns" name="delving" value="http://www.delving.eu/schemas/"/>
                <attr prefix="xmlns" name="custom" value="http://www.delving.eu/schemas/"/>
                <attr prefix="xmlns" name="dc" value="http://purl.org/dc/elements/1.1/"/>
                <attr prefix="xmlns" name="dcterms" value="http://purl.org/dc/termes/"/>
                <attr prefix="xmlns" name="europeana" value="http://www.europeana.eu/schemas/ese/"/>
                <attr prefix="xmlns" name="icn" value="http://www.icn.nl/"/>
            </attrs>
            <elem name="layout">
                <list name="fields" path="/icn:record/*[local-name()!='purchasePrice']">
                    <auto-layout-field/>
                </list>
            </elem>
            <elem name="item">
                <list name="fields" path="/icn:record/*[local-name()!='purchasePrice']">
                    <auto-field/>
                </list>
            </elem>
        </elem>
    </view>
</views>