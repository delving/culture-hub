<?xml version ="1.0" encoding="UTF-8"?>

<views>
    <view name="full">
      <row>
        <section id="general">
            <field path="/record/thing/displayTitle" label="thing.title"/>
            <field path="/record/thing/displayDescription" label="thing.description"/>
        </section>
      </row>
      <row>
          <section id="events">
              <list path="/record/events/event">
                  <field label="thing.title" path="displayEvent" />
                  <field label="thing.date" path="displayDate" />
              </list>
          </section>
      </row>
    </view>
</views>