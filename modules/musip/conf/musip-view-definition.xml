<?xml version ="1.0" encoding="UTF-8"?>

<views>
    <view name="museum">
        <row>
            <section id="general" type="dl" class="span6">
                <field path="/musip:actor/musip:name" label="thing.title" type="di"/>
                <field path="/musip:actor/musip:description" label="thing.description" type="di"/>
                <field path="/musip:actor/musip:addresss" label="thing.address" type="di"/>
                <field path="/musip:actor/musip:postal_code" label="thing.postalCode" type="di"/>
                <field path="/musip:actor/musip:place" label="thing.place" type="di"/>
                <field path="/musip:actor/musip:municipality" label="thing.municipality" type="di"/>
                <field path="/musip:actor/musip:province" label="thing.province" type="di"/>
                <field path="/musip:actor/musip:geographic_area" label="thing.geographicArea" type="di"/>
                <field path="/musip:actor/musip:fax" label="thing.fax" type="di"/>
                <field path="/musip:actor/musip:email" label="thing.email" type="di"/>
                <field path="/musip:actor/musip:url" label="thing.url" type="di"/>
                <field path="/musip:actor/musip:mission_statement" label="thing.missionStatement" type="di"/>
                <list label="thing.contact" path="/musip:actor/musip:contacts/musip:contact" type="ul">
                    <link urlExpr="musip:email" urlValue="mailto:" textExpr="musip:name"/>
                </list>
            </section>
            <section class="span6">
                <image path="/musip:actor/musip:image" class="img"/>
                <list type="ul" label="thing.collections" path="/musip:actor/musip:collections/musip:collection" class="split">
                    <link textExpr="." urlValue="/${orgId}/collection/" urlExpr="@localId"/>
                </list>
            </section>
        </row>
        <row>
            <section class="span6">
                <list path="/musip:actor/musip:contatcs/musip:contact">
                    <field label="thing.contactName" path="musip:name"/>
                    <link textValue="thing.contactEmail" urlExpr="musip:email"/>
                </list>
            </section>
        </row>
    </view>

    <view name="collection">

        <row>
            <section id="general" type="dl" class="span6">
                <field path="/musip:collection/musip:name" label="thing.title" type="di"/>
                <field path="/musip:collection/musip:description" label="thing.description" type="di"/>
                <field path="/musip:collection/musip:strength" label="metadata.collection.strength" type="di"/>
                <field path="/musip:collection/musip:startYear" label="thing.startYear" type="di"/>
                <field path="/musip:collection/musip:endYear" label="thing.endYear" type="di"/>
                <enumeration label="thing.keywords" type="concatenated" separator=", " path="/musip:collection/musip:keywords/musip:keyword"/>
            </section>
            <section class="span6">
                <image path="/musip:collection/musip:images[1]/musip:url" />
                <list type="ul" path="/musip:collection/musip:administrators/musip:actor" label="metadata.collection.administrators" class="col2">
                    <link textExpr="." urlValue="/${orgId}/museum/" urlExpr="@actorId"/>
                </list>
            </section>
        </row>

    </view>

